generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./Database.db"
}

model departments {
  dept_id      Int            @id @default(autoincrement())
  dept_name    String
  job_position job_position[]
}

model job_position {
  job_id             Int          @id @default(autoincrement())
  job_title          String
  department_id      Int?
  job_level          String?
  work_location      String?
  job_description    String?
  responsibilities   String?
  qualifications     String?
  special_conditions String?
  hiring_count       Int?         @default(1)
  employment_type    String?
  salary_min         Int?
  salary_max         Int?
  open_date          DateTime?
  close_date         DateTime?
  status             String?      @default("Open")
  departments        departments? @relation(fields: [department_id], references: [dept_id], onDelete: NoAction, onUpdate: NoAction)
}

model TranslationCache {
  id               Int       @id @default(autoincrement())
  original_thai    String    @unique
  translated_en    String
  source_page      String?
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt

  @@map("TranslationCache")
}
